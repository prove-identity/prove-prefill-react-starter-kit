{
  "compilerOptions": {    
      "lib": ["dom", "dom.iterable", "esnext"],    
      "target": "ESNext",    
      "types": ["vite/client"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx"
    },
  "include": [
    "src"
  ]
}
